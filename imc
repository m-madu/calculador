</div>
   <div class="b">
       <label><b>Altura:</b></label>
       <input type="number" id="altura" placeholder="Ex: 1.65" step="0.01">

   </div>

<div class="b"> 
    <label> <b>Peso:</b></label>
    <input type="number" id="peso" placeholder="Ex: 60">
    

</div>

    

    <button onclick="calcularIMC()">Calcular</button>

    <div class="quadrado" id="resultado">

    </div>
  </div>

<script>
    function calcularIMC() {
      let peso = parseFloat(document.getElementById("peso").value);
      let altura = parseFloat(document.getElementById("altura").value);

      if (!peso || !altura) {
        document.getElementById("resultado").innerText =
          "Por favor preencher corretamente todos os campos!";
        return;
      }

      let imc = peso / (altura * altura);
      let msg = "";

      if (imc < 18.5) msg = "Abaixo do peso";
      else if (imc < 24.9) msg = "Peso normal";
      else if (imc < 29.9) msg = "Sobrepeso";
      else msg = "Obesidade";

      document.getElementById("resultado").innerText =
        `Seu IMC é ${imc.toFixed(2)} — ${msg}`;
    }
  </script>
